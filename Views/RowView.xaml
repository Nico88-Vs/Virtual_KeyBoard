<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VirtalKyboard.Views.RowView"
             xmlns:local="clr-namespace:VirtalKyboard.Views"
             xmlns:viewmodel="clr-namespace:VirtalKyboard.ViewModels"
             x:DataType="viewmodel:RowViewModel">

    <CollectionView ItemsSource="{Binding KeyViews}">
        <!--, Source={x:Reference thisView}}">-->
        <CollectionView.ItemsLayout>
            <!-- Configurazione per un layout orizzontale lineare -->
            <LinearItemsLayout Orientation="Horizontal" ItemSpacing="1" />
        </CollectionView.ItemsLayout>
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <!-- Qui assumiamo che KeyView sia una ContentView configurata per mostrare dati -->
                <ContentView Content="{Binding}" />
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentView>
