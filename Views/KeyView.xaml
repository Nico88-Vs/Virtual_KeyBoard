<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VirtalKyboard.Views.KeyView"
             xmlns:converters="clr-namespace:VirtalKyboard.Services.Converters"
             xmlns:viewmodel="clr-namespace:VirtalKyboard.ViewModels"
             x:DataType="viewmodel:KeyViewModel">
    <ContentView.Resources>
        <ResourceDictionary>
            <converters:BooleanToScaleConverter x:Key="BooleanToScaleConverter"/>
            <converters:BooleanToColorConverter x:Key="BooleanToColorConverter"/>
        </ResourceDictionary>
    </ContentView.Resources>
    
    <!-- XAML per un tasto della tastiera -->
    <Button Text="{Binding Letter}"
        FontSize="24"
        BackgroundColor="{Binding IsPressed, Converter={StaticResource BooleanToColorConverter}}"
        Command="{Binding PressKeyCommand}"
        Margin="1"
        WidthRequest="{Binding Lengt_Modifier}"
        HeightRequest="50"
        CornerRadius="10"
        Scale="{Binding IsPressed, Converter={StaticResource BooleanToScaleConverter}}"
        x:Name="keyButton">
    </Button>

